<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/event_card_height"
    android:layout_marginTop="@dimen/event_card_ll_marginTop"
    android:layout_marginBottom="@dimen/event_card_margins"
    android:layout_marginLeft="@dimen/event_card_margins"
    android:layout_marginRight="@dimen/event_card_margins">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_height"
        android:paddingBottom="@dimen/event_card_paddingBottom"
        android:id="@+id/event_card_view"
        android:background="@color/background_common">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/testing"
                android:id="@+id/iv_event_card"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_height="@dimen/event_card_image_height" />

            <LinearLayout
                android:id="@+id/ll_event_card_desc"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_below="@+id/iv_event_card"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/event_card_margins"
                android:layout_marginLeft="@dimen/event_card_margins"
                android:layout_marginStart="@dimen/event_card_margins"
                >


                <LinearLayout
                    android:id="@+id/ll_event_card_date"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:text="15"
                        android:gravity="center"
                        android:id="@+id/tv_event_card_date"
                        android:layout_width="@dimen/event_card_tv_size"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/event_card_date_size"
                        />

                    <TextView
                        android:text="OCT"
                        android:gravity="center"
                        android:id="@+id/tv_event_card_month"
                        android:layout_width="@dimen/event_card_tv_size"
                        android:layout_height="wrap_content"
                        android:textColor="@color/button_callforaction"
                        android:textSize="@dimen/event_card_month_size"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_event_card_titles"
                    android:layout_marginStart="@dimen/event_card_ll_marginStart"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/event_card_ll_marginStart">

                    <TextView
                        android:layout_marginTop="@dimen/event_card_ll_marginTop"
                        android:text="Hirandani Powai Run"
                        android:id="@+id/tv_event_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/event_card_name_size" />

                    <TextView
                        android:text="Hiranandani Gardens, Mumbai"
                        android:id="@+id/tv_event_card_ad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/event_card_ad_size"
                        android:layout_marginTop="@dimen/event_card_tv_marginTop"/>

                    <TextView
                        android:text="By Nike"
                        android:id="@+id/tv_event_card_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_marginTop="@dimen/event_card_tv_marginTop"
                        android:textSize="@dimen/event_card_by_size"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>