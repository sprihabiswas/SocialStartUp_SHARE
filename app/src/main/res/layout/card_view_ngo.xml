<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/event_card_height"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="@dimen/event_card_margins"
    android:layout_marginRight="@dimen/event_card_margins">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/ngo_card_view"
        android:layout_marginBottom="@dimen/event_card_margins"
        android:background="@color/background_common"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:src="@drawable/testing"
                android:id="@+id/iv_ngo_card"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_height="@dimen/event_card_image_height"
                />

            <LinearLayout
                android:id="@+id/ll_ngo_card_desc"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/event_card_margins"
                android:layout_marginLeft="@dimen/event_card_margins"
                android:layout_marginStart="@dimen/event_card_margins"
                android:layout_marginBottom="@dimen/event_card_margins">



                <LinearLayout
                    android:id="@+id/ll_ngo_card_titles"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="Hirandani Powai Run"
                        android:textStyle="bold"
                        android:id="@+id/tv_ngo_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/event_card_name_size" />

                    <TextView
                        android:text="Hiranandani Gardens, Mumbai"
                        android:id="@+id/tv_ngo_card_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/event_card_ad_size"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:text="By Nike"
                        android:id="@+id/tv_ngo_card_vol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/event_card_by_size" />


                </LinearLayout>

            </LinearLayout></LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>