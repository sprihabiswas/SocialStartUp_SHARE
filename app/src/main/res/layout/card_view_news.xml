<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv_news"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/news_card_padding">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/news_card_image_height"
                android:id="@+id/news_card_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/testing"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_card_heading"
                android:text="Heading"
                android:textColor="@color/news_card_heading"
                android:layout_marginTop="@dimen/news_card_margin_gap"
                android:layout_below="@+id/news_card_photo"
                android:textSize="@dimen/news_card_heading_text_size"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_card_content"
                android:text="Content"
                android:textColor="@color/news_card_content"
                android:layout_marginTop="@dimen/news_card_margin_gap"
                android:layout_below="@+id/news_card_heading"
                android:textSize="@dimen/news_card_content_text_size"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>